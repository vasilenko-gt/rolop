source 'https://rubygems.org'

gem 'rails', '~> 5.1.4'                                                           # Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'pg'                                                                          # Use postgresql as the database for Active Record.
gem 'haml-rails'                                                                  # Haml-rails provides Haml generators for Rails.
gem 'sass-rails'                                                                  # Use SCSS for stylesheets.
gem 'coffee-rails'                                                                # Use CoffeeScript for .coffee assets and views.
gem 'uglifier'                                                                    # Use Uglifier as compressor for JavaScript assets.
gem 'puma'                                                                        # Use Puma as the app server.
gem 'turbolinks'                                                                  # Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks.
gem 'carrierwave'                                                                 # This gem provides a simple and extremely flexible way to upload files from Ruby applications.
gem 'rails_admin'                                                                 # RailsAdmin is a Rails engine that provides an easy-to-use interface for managing your data.
gem 'active_model_serializers'                                                    # ActiveModel::Serializer implementation and Rails hooks.
gem 'validates_overlap'                                                           # Gem for Rails 3 and 4, that helps validate overlap

gem 'jquery-rails'                                                                # Plugin Jquery.
gem 'jquery-ui-rails'                                                             # Plugin Jquery UI.
gem 'bootstrap', '~> 4.1.0'                                                       # Bootstrap 4 Ruby Gem for Rails / Sprockets and Compass.
gem 'toastr-rails'                                                                # Toastr is a Javascript library for Gnome / Growl type non-blocking notifications. jQuery is required. The goal is to create a simple core library that can be customized and extended.
gem 'font-awesome-sass'                                                           # Plugin Font awesome.

gem 'rails-assets-moment',                    source: 'https://rails-assets.org'  # Plugin Moment.

group :development do
  gem 'spring'                                                                    # Spring is a Rails application preloader.
  gem 'listen'
end