source 'https://rubygems.org'

gem 'rails'                                                                       # Ruby framework.
gem 'pg'                                                                          # Use postgresql as the database for Active Record.
gem 'haml-rails'                                                                  # Haml-rails provides Haml generators for Rails.
gem 'sass-rails'                                                                  # Use SCSS for stylesheets.
gem 'coffee-rails'                                                                # Use CoffeeScript for .coffee assets and views.
gem 'uglifier'                                                                    # Use Uglifier as compressor for JavaScript assets.
gem 'puma'                                                                        # Use Puma as the app server.
gem 'turbolinks'                                                                  # Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks.
gem 'carrierwave'                                                                 # This gem provides a simple and extremely flexible way to upload files from Ruby applications.
gem 'mini_magick'                                                                 # A ruby wrapper for ImageMagick or GraphicsMagick command line.
gem 'rails_admin'                                                                 # RailsAdmin is a Rails engine that provides an easy-to-use interface for managing your data.
gem 'simple_form'                                                                 # Simple forms made easy.
gem 'devise'                                                                      # Flexible authentication solution for Rails with Warden.
gem 'active_model_serializers'                                                    # ActiveModel::Serializer implementation and Rails hooks.
gem 'devise-bootstrap-views'                                                      # Devise views with Bootstrap 3, Used Bootstrap responsive columns, I18n Support.
gem 'cancancan'                                                                   # The authorization Gem for Ruby on Rails.
gem 'validates_overlap'                                                           # Gem for Rails 3 and 4, that helps validate overlap.
gem 'bootsnap'                                                                    # Boot large Ruby/Rails apps faster.
gem 'i18n-js'                                                                     # It's a small library to provide the I18n translations on the Javascript. It comes with Rails support.
gem 'loaf'                                                                        # Manages and displays breadcrumb trails in Rails app - lean & mean.
gem 'listen'

gem 'remotipart'                                                                  # Rails jQuery file uploads via standard Rails "remote: true" forms.
gem 'jquery-rails'                                                                # Plugin Jquery.
gem 'jquery-ui-rails'                                                             # Plugin Jquery UI.
gem 'bootstrap', '~> 4.1.0'                                                       # Bootstrap 4 Ruby Gem for Rails / Sprockets and Compass.
gem 'bootstrap4-datetime-picker-rails'                                            # A Datepicker for Twitter Bootstrap, integrated with Rails assets pipeline
gem 'toastr-rails'                                                                # Toastr is a Javascript library for Gnome / Growl type non-blocking notifications. jQuery is required. The goal is to create a simple core library that can be customized and extended.
gem 'font-awesome-sass'                                                           # Plugin Font awesome.
gem 'rails-assets-fullcalendar',              source: 'https://rails-assets.org'  # Plugin FullCalendar.
gem 'rails-assets-fullcalendar-scheduler',    source: 'https://rails-assets.org'  # A premium add-on to FullCalendar for displaying events and resources
gem 'rails-assets-moment',                    source: 'https://rails-assets.org'  # Plugin Moment.
gem 'rails-assets-chartjs',                   source: 'https://rails-assets.org'  # Chart.js for Rails Asset Pipeline

group :development do
  gem 'better_errors'                                                             # More Flexible Errors Pages.
  gem 'spirit_hands'                                                              # Pry-based enhancements for the default Rails 5 console and non-Rails projects.
end